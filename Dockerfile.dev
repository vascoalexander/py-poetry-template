ARG PYTHON_VERSION=3.12

FROM python:${PYTHON_VERSION}-slim-bookworm

RUN apt-get update && apt-get install -y git \
    && rm -rf /var/lib/apt/lists/*

RUN git config --global --add safe.directory /app

RUN adduser --system --group --uid 1000 --shell /bin/bash appuser

ENV POETRY_HOME="/opt/poetry" \
    POETRY_VIRTUALENVS_IN_PROJECT=false \
    POETRY_NO_INTERACTION=1 \
    PATH="/opt/poetry/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin"

RUN pip install poetry

RUN chown -R appuser:appuser /opt/poetry

ENV PATH="/opt/poetry/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin"

WORKDIR /app

RUN chown -R appuser:appuser /app

USER appuser

COPY pyproject.toml poetry.lock ./

RUN poetry install --no-root --sync --with dev

CMD ["bash"]